{
  "rules": [
    {
      "rule_id": "min_wage_2024",
      "name": "Minimum Wage Validation 2024",
      "description": "Validates that monthly salary meets minimum wage requirements according to Israeli law",
      "category": "minimum_wage",
      "law_reference": "Minimum Wage Law 5747-1987, Section 2",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "min_wage_check",
          "field_path": "payslip.base_salary",
          "operator": "lt",
          "value": 5300,
          "data_type": "decimal",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "min_wage_shortfall",
          "calculation_type": "back_pay",
          "formula": "5300 - payslip.base_salary",
          "variables": {
            "min_wage": "5300"
          },
          "result_field": "shortfall_amount"
        }
      ],
      "penalty_formula": "shortfall_amount * 0.1",
      "requires_cross_document": false,
      "applicable_document_types": [
        "payslip"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2024-01-01 00:00:00",
      "created_by": null
    },
    {
      "rule_id": "hourly_min_wage_2024",
      "name": "Hourly Minimum Wage Validation 2024",
      "description": "Validates hourly wage meets minimum requirements",
      "category": "minimum_wage",
      "law_reference": "Minimum Wage Law 5747-1987, Section 3",
      "priority": 1,
      "active": false,
      "conditions": [
        {
          "condition_id": "hourly_wage_check",
          "field_path": "contract.hourly_rate",
          "operator": "lt",
          "value": 30.0,
          "data_type": "decimal",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "hourly_shortfall",
          "calculation_type": "back_pay",
          "formula": "(30.0 - contract.hourly_rate) * payslip.working_hours",
          "variables": {
            "min_hourly_wage": "30.0"
          },
          "result_field": "hourly_shortfall_amount"
        }
      ],
      "penalty_formula": null,
      "requires_cross_document": true,
      "applicable_document_types": [
        "payslip",
        "contract"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2025-08-26T18:50:35.522894",
      "created_by": null
    },
    {
      "rule_id": "overtime_125_rate",
      "name": "Overtime 125% Rate Validation",
      "description": "Validates overtime is paid at 125% rate for first 2 hours daily",
      "category": "overtime",
      "law_reference": "Working Hours Law 5711-1951, Section 8",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "has_overtime",
          "field_path": "attendance.overtime_hours",
          "operator": "gt",
          "value": 0,
          "data_type": "decimal",
          "compare_field_path": null
        },
        {
          "condition_id": "overtime_rate_low",
          "field_path": "payslip.overtime_rate",
          "operator": "lt",
          "value": "contract.hourly_rate * 1.25",
          "data_type": "formula",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "overtime_correction",
          "calculation_type": "overtime_correction",
          "formula": "(contract.hourly_rate * 1.25 - payslip.overtime_rate) * attendance.overtime_hours",
          "variables": {
            "overtime_multiplier": "1.25"
          },
          "result_field": "overtime_underpayment"
        }
      ],
      "penalty_formula": "overtime_underpayment * 0.05",
      "requires_cross_document": true,
      "applicable_document_types": [
        "payslip",
        "attendance",
        "contract"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2024-01-01 00:00:00",
      "created_by": null
    },
    {
      "rule_id": "overtime_150_rate",
      "name": "Overtime 150% Rate Validation",
      "description": "Validates overtime is paid at 150% rate after 2 hours daily",
      "category": "overtime",
      "law_reference": "Working Hours Law 5711-1951, Section 8",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "has_extended_overtime",
          "field_path": "attendance.overtime_hours",
          "operator": "gt",
          "value": 2,
          "data_type": "decimal",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "extended_overtime_correction",
          "calculation_type": "overtime_correction",
          "formula": "contract.hourly_rate * 1.50 * (attendance.overtime_hours - 2)",
          "variables": {
            "extended_overtime_multiplier": "1.50",
            "threshold_hours": "2"
          },
          "result_field": "extended_overtime_amount"
        }
      ],
      "penalty_formula": null,
      "requires_cross_document": true,
      "applicable_document_types": [
        "payslip",
        "attendance",
        "contract"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2024-01-01 00:00:00",
      "created_by": null
    },
    {
      "rule_id": "pension_employer_contribution",
      "name": "Employer Pension Contribution Validation",
      "description": "Validates employer pension contribution is at least 6% of salary",
      "category": "pension",
      "law_reference": "Pension Advice Law 5765-2005, Section 14",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "low_employer_pension",
          "field_path": "payslip.pension_employer_contribution",
          "operator": "lt",
          "value": "payslip.base_salary * 0.06",
          "data_type": "formula",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "pension_shortfall",
          "calculation_type": "back_pay",
          "formula": "(payslip.base_salary * 0.06) - payslip.pension_employer_contribution",
          "variables": {
            "required_pension_rate": "0.06"
          },
          "result_field": "pension_shortfall_amount"
        }
      ],
      "penalty_formula": "pension_shortfall_amount * 0.1",
      "requires_cross_document": false,
      "applicable_document_types": [
        "payslip"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2024-01-01 00:00:00",
      "created_by": null
    },
    {
      "rule_id": "study_fund_contribution",
