    {
      "rule_id": "daily_hours_limit",
      "name": "Daily Working Hours Limit",
      "description": "Validates daily working hours don't exceed 12 hours including overtime",
      "category": "working_hours",
      "law_reference": "Working Hours Law 5711-1951, Section 4",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "daily_limit_exceeded",
          "field_path": "attendance.total_hours",
          "operator": "gt",
          "value": 12,
          "data_type": "decimal",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "excess_hours_penalty",
          "calculation_type": "penalty",
          "formula": "(attendance.total_hours - 12) * 500",
          "variables": {
            "daily_limit": "12",
            "penalty_per_hour": "500"
          },
          "result_field": "daily_limit_penalty"
        }
      ],
      "penalty_formula": "daily_limit_penalty",
      "requires_cross_document": false,
      "applicable_document_types": [
        "attendance"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2024-01-01 00:00:00",
      "created_by": null
    },
