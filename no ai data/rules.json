    {
      "rule_id": "f3ab620b-4486-4677-9a16-371f927fabaf",
      "name": "Complex Overtime Rule",
      "description": "Comprehensive overtime validation with multiple rates",
      "category": "overtime",
      "law_reference": "Working Hours Law 5711-1951, Sections 8-10",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "c64d2c83-ee3c-4711-bdeb-7d2b3aec59a6",
          "field_path": "attendance.overtime_hours",
          "operator": "gt",
          "value": 0,
          "data_type": "decimal",
          "compare_field_path": null
        },
        {
          "condition_id": "601ccf11-66a5-4546-bd8b-0846c1923098",
          "field_path": "payslip.overtime_pay",
          "operator": "lt",
          "value": "attendance.overtime_hours * contract.hourly_rate * 1.25",
          "data_type": "formula",
          "compare_field_path": "calculated_minimum_overtime"
        }
      ],
      "calculations": [
        {
          "calculation_id": "38a71226-4f02-4681-9b5a-c2cb2442e869",
          "calculation_type": "overtime_correction",
          "formula": "attendance.overtime_hours * contract.hourly_rate * 1.25 - payslip.overtime_pay",
          "variables": {
            "overtime_rate_125": "1.25",
            "overtime_rate_150": "1.50"
          },
          "result_field": "overtime_shortfall"
        },
        {
          "calculation_id": "5e676133-8bb5-452b-9202-5eaa5f9336ed",
          "calculation_type": "penalty",
          "formula": "overtime_shortfall * 0.05",
          "variables": {
            "penalty_rate": "0.05"
          },
          "result_field": "overtime_penalty"
        }
      ],
      "penalty_formula": "overtime_shortfall + overtime_penalty",
      "requires_cross_document": true,
      "applicable_document_types": [
        "payslip",
        "contract",
        "attendance"
      ],
      "created_date": "2025-08-26 02:46:51.125159",
      "updated_date": "2025-08-26 02:46:51.125163",
      "created_by": null
    },
