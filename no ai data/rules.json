    {
      "rule_id": "daily_break_requirement",
      "name": "Daily Break Requirement",
      "description": "Validates mandatory break periods for shifts over 6 hours",
      "category": "rest_periods",
      "law_reference": "Working Hours Law 5711-1951, Section 6",
      "priority": 1,
      "active": true,
      "conditions": [
        {
          "condition_id": "long_shift_no_break",
          "field_path": "attendance.total_hours",
          "operator": "gt",
          "value": 6,
          "data_type": "decimal",
          "compare_field_path": null
        },
        {
          "condition_id": "insufficient_break",
          "field_path": "attendance.break_duration_minutes",
          "operator": "lt",
          "value": 30,
          "data_type": "int",
          "compare_field_path": null
        }
      ],
      "calculations": [
        {
          "calculation_id": "break_violation_penalty",
          "calculation_type": "penalty",
          "formula": "200",
          "variables": {
            "break_violation_fine": "200"
          },
          "result_field": "break_penalty"
        }
      ],
      "penalty_formula": "break_penalty",
      "requires_cross_document": false,
      "applicable_document_types": [
        "attendance"
      ],
      "created_date": "2024-01-01 00:00:00",
      "updated_date": "2024-01-01 00:00:00",
      "created_by": null
    },
    {
      "rule_id": "weekly_rest_requirement",
